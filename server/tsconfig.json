{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "NodeNext",
    "target": "ES6",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
