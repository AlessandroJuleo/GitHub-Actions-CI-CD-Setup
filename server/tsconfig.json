{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES6",
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
